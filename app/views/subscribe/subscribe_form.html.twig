<form action="" method="post">
    <div class="form-group">
        <label for="user_email">Email address</label>
        <p><i>Type here your email address to receive notifications and stats</i></p>
        <input type="email" name="user_email" class="form-control" id="user_email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="security_token">Security Token</label>
        <p><i>Ask for a security token to any Review Heroes administrator</i></p>
        <input type="password" name="security_token" class="form-control" id="security_token" placeholder="Security Token">
    </div>

    {% if errors is defined %}
        {% for error in errors %}
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                {{ error }}
            </div>
        {%  endfor %}
    {% endif %}

    {% if success is defined %}
        <div class="alert alert-success" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            {{ success }}
        </div>
    {% endif %}

    <button type="submit" class="btn btn-default pull-right">Subscribe</button>
</form>
